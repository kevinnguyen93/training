{% extends '::baseNew.html.twig' %}

{% block title %}
    List Products
{% endblock %}

{% block menusub %}
    {{ parent() }}
    <ul>
        <li><a href="{{ url('acme_store_listProduct') }}">List</a></li>
        <li><a href="{{ url('acme_store_createProduct') }}">Add</a></li>
    </ul>
{% endblock %}

{% block body %}
    <h2>List Products</h2>
    <hr/>
    <table>
        <thead>
            <tr>
                <th>Id Product</th>
                <th>Name Product</th>
                <th>Name Category</th>
                <th>Price</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            {% for product in listProducts %}
                <tr>
                    <td><a href="{{ url('acme_store_eidtProduct' , {'id': product.id }) }}" > {{ product.id }} </a></td>
                    <td><a href="{{ url('acme_store_showProduct' , {'id': product.id }) }}" > {{ product.name }} </a></td>
                    <td><a href="{{ url('acme_store_showCategory' , {'id': product.category.id }) }}" >{{ product.category.name }}</a></td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.description|slice(0,10) }}...</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}