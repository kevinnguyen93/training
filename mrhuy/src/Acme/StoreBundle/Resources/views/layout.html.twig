<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{% block title %}Demo Flat UI {% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}" />
    <!-- Loading Bootstrap -->
    <link rel="stylesheet" href="{{ asset('flatui/bootstrap/css/bootstrap.css') }}" />
    <link rel="stylesheet" href="{{ asset('flatui/bootstrap/css/prettify.css') }}" />

    <!-- Loading Flat UI -->
    <link rel="stylesheet" href="{{ asset('flatui/css/flat-ui.css') }}" />

    {% block stylesheep %}
        <link rel="stylesheet" href="{{ asset('css/demo.css') }}" />
    {% endblock %}

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements. All other JS at the end of file. -->
    <!--[if lt IE 9]>
    <script src="{{ asset('flatui/js/html5shiv.js') }}"></script>
    <script src="{{ asset('flatui/js/respond.min.js') }}"></script>
    <![endif]-->

</head>
<body>
    <div class="container">
        {% block container %}
            <div class="row demo-row">
                <div class="col-xs-9">
                    <nav class="navbar navbar-inverse navbar-embossed" role="navigation">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-01">
                                <span class="sr-only">Toggle navigation</span>
                            </button>
                        </div>
                        <div class="collapse navbar-collapse" id="navbar-collapse-01">
                            <ul class="nav navbar-nav navbar-left">
                                {% block main_menu %}
                                <li><a href="{{ url('acme_store_index') }}">Home</a></li>
                                <li>
                                    <a href="{{ url('acme_store_listProduct') }}" id="menu_product" data-toggle="dropdown">Product</a>
                                    <span class="dropdown-arrow"></span>
                                    <ul class="dropdown-menu" role="menu" aria-labelledby="menu_product">
                                        {% block menusub_product %}
                                            <li><a href="{{ url('acme_store_listProduct') }}">List</a></li>
                                            <li><a href="{{ url('acme_store_createProduct') }}">Add</a></li>
                                        {% endblock %}
                                    </ul>
                                </li>
                                <li>
                                    <a href="{{ url('acme_store_listCategory') }}" id="menu_category" data-toggle="dropdown">Category</a>
                                    <span class="dropdown-arrow"></span>
                                    <ul class="dropdown-menu" role="menu" aria-labelledby="menu_category">
                                        {% block menusub_category %}
                                            <li><a href="{{ url('acme_store_listCategory') }}">List</a></li>
                                            <li><a href="{{ url('acme_store_createCategory') }}">Add</a></li>
                                        {% endblock %}
                                    </ul>
                                </li>
                                {% endblock %}
                            </ul>
                        </div><!-- /.navbar-collapse -->
                    </nav><!-- /navbar -->
                </div>
            </div>

            <div id="content" class="row">
                {% block body %}{% endblock %}
            </div>
        {% endblock %}
    </div>
    <!-- load Js -->
    <script src="{{ asset('flatui/js/jquery-1.8.3.min.js') }}"></script>
    <script src="{{ asset('flatui/js/jquery-ui-1.10.3.custom.min.js') }}"></script>
    <script src="{{ asset('flatui/js/jquery.ui.touch-punch.min.js') }}"></script>
    <script src="{{ asset('flatui/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('flatui/js/bootstrap-select.js') }}"></script>
    <script src="{{ asset('flatui/js/bootstrap-switch.js') }}"></script>
    <script src="{{ asset('flatui/js/flatui-checkbox.js') }}"></script>
    <script src="{{ asset('flatui/js/flatui-radio.js') }}"></script>
    <script src="{{ asset('flatui/js/jquery.tagsinput.js') }}"></script>
    <script src="{{ asset('flatui/js/jquery.placeholder.js') }}"></script>
    <script src="{{ asset('flatui/js/jquery.stacktable.js') }}"></script>
    <script src="{{ asset('flatui/js/video.js') }}"></script>
    <script src="{{ asset('js/application.js') }}"></script>
    {% block javascript %}{% endblock %}
</body>
</html>