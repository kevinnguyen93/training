{% extends "AcmeHelloBundle::layout.html.twig" %}
{% block title 'Category Bundle' %}

{% block content %}
	<div class="panel panel-default">
	  	<div class="panel-heading">Edit Category</div>
	
	{{ form_start(form, {'action': path('hello_category_save'), 'method': 'POST', 'attr': {'class': 'form-horizontal'}}) }}
   		<div class="form-group">
   			{{ form_label(form.name, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
   			<div class="col-sm-10">{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}</div>
   		</div>
    	<div class="form-group">
   			<div class="col-sm-offset-2 col-sm-10">{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}</div>
   		</div>
   	{{ form_end(form) }}	
	</div>	
{% endblock %}
