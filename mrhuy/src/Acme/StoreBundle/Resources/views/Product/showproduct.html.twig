{% extends '@AcmeStore/layout.html.twig' %}

{% block title %}
    Show Products
{% endblock %}

{% block body %}
    <h2>Show Products</h2>
    <hr/>
    <div class="panel panel-default">
        <table class="table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name Product</th>
                <th>Name Category</th>
                <th>Price</th>
                <th>Description</th>
            </tr>
            </thead>
            <tbody>
                <tr>
                    <td><a href="{{ url('acme_store_editProduct' , {'id': product.id }) }}" > {{ product.id }} </a></td>
                    <td>{{ product.name }}</td>
                    <td><a href="{{ url('acme_store_showCategory' , {'id': product.category.id }) }}" >{{ product.category.name }}</a></td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.description }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}