{% extends '@AcmeStore/layout.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block menusub %}
{% endblock %}

{% block body %}
    <h2>List Products</h2>
    <hr/>
    <div class="content">
        {#
        {{ include(
            'AcmeStoreBundle:Default:listproduct.html.twig' ,
            {'listProducts': listProducts}
        ) }}
        #}
        <table>
            <thead>
            <tr>
                <th>Id Product</th>
                <th>Name Product</th>
                <th>Name Category</th>
                <th>Price</th>
                <th>Description</th>
            </tr>
            </thead>
            <tbody>
            {% for product in listProducts %}
                <tr>
                    <td><a href="{{ url('acme_store_editProduct' , {'id': product.id }) }}" >  {{ product.id }} </a></td>
                    <td><a href="{{ url('acme_store_showProduct' , {'id': product.id }) }}" > {{ product.name }}</a></td>
                    <td><a href="{{ url('acme_store_showCategory' , {'id': product.category.id }) }}" >{{ product.category.name }}</a></td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.description|slice(0,10) }}...</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}