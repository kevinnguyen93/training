{% extends "AcmeHelloBundle::layout.html.twig" %}

{% block content %}
<div class="panel panel-default">
  	<div class="panel-heading">List Users</div>
  	<div class="nav navbar-nav pull-right">
    	<a style="margin-top:8px" class="btn btn-default" href="{{ path('hello_createuser') }}"><span class="glyphicon glyphicon-plus"></span> Add User</a>
    </div>
    <table class="table table-striped">
		<thead>
			<tr>
				<th width="50">ID</th>
				<th width="300">First Name</th>
                <th>Last Name</th>
				<th>Username</th>
				<th align="center" width="150">Action</th>
			</tr>
		</thead>
		<tbody>
			{% for user in listUser %}
			<tr>
				<td>{{ user.id }}</td>
				<td>{{ user.firstname }}</td>
				<td>{{ user.lastname }}</td>
				<td>{{ user.username }}</td>
				<td>
					<div class="btn-group btn-group-xs">
						<a class="btn btn-default" href="{{ path('hello_edit', {'id' : user.id}) }}"><span class="glyphicon glyphicon-edit"></span> Edit</a>
						<a class="btn btn-default" href="{{ path('hello_deleteuser', {'id' : user.id}) }}"><span class="glyphicon glyphicon-remove"></span> Delete</a>
					</div>
				</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
	
</div>
{% endblock %}
