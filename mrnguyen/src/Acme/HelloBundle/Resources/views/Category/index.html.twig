{% extends "AcmeHelloBundle::layout.html.twig" %}
{% block title 'Category Bundle' %}

{% block content %}
<div class="panel panel-default">
  	<div class="panel-heading">List Category</div>
  	<div class="nav navbar-nav pull-right">
    	<a style="margin-top:8px" class="btn btn-default" href="{{ path('hello_category_create') }}"><span class="glyphicon glyphicon-plus"></span> Add Category</a>
    </div>
    <table class="table table-striped">
		<thead>
			<tr>
				<th width="50">ID</th>
				<th width="300">Category Name</th>
                <th align="center" width="150">Action</th>
			</tr>
		</thead>
		<tbody>
			{% for cat in listCat %}
			<tr>
				<td>{{ cat.id }}</td>
				<td>{{ cat.name }}</td>
				<td>
					<div class="btn-group btn-group-xs">
						<a class="btn btn-default" href="{{ path('hello_category_edit', {'id' : cat.id}) }}"><span class="glyphicon glyphicon-edit"></span> Edit</a>
						<a class="btn btn-default" href="{{ path('hello_category_delete', {'id' : cat.id}) }}"><span class="glyphicon glyphicon-remove"></span> Delete</a>
					</div>
				</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
	
</div>
{% endblock %}
