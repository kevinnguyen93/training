{% extends '@AcmeStore/layout.html.twig' %}

{% block title %}
    Show Category
{% endblock %}

{% block body %}
    <h2>Show Category</h2>
    <div class="panel panel-default">
        <table class="table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name Category</th>
                <th>Number Products</th>
            </tr>
            </thead>
            <tbody>
                <tr>
                    <td><a href="{{ url('acme_store_editCategory' , {'id': category.id }) }}" >{{ category.id }}</a></td>
                    <td>{{ category.name }}</td>
                    <td>{{ category.products|length }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
