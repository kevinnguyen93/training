{% extends '@AcmeStore/layout.html.twig' %}

{% block title %}
    {% if action=='add' %}
        Add Product
    {% else %}
        Edit Product
    {% endif %}
{% endblock %}


{% block menusub %}
    {{ parent() }}
    <ul>
        <li><a href="{{ url('acme_store_listProduct') }}">List</a></li>
    </ul>
{% endblock %}

{% block body %}
    {% if action == 'add' %}
        <h2>Add Product</h2>
    {% else %}
        <h2>Edit Product</h2>
    {% endif %}
    <hr/>
    {{ form(formProduct) }}
{% endblock %}