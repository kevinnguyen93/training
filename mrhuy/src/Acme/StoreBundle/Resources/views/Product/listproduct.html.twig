{% extends '@AcmeStore/layout.html.twig' %}

{% block title %}
    List Products
{% endblock %}

{% block body %}
    <h2>List Products</h2>
    <hr/>
    <div class="panel panel-default">
        <table class="table ">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name Product</th>
                    <th>Name Category</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for product in listProducts %}
                    <tr>
                        <td><a href="{{ url('acme_store_editCategory' , {'id': product.id }) }}" > {{ product.id }} </a></td>
                        <td><a href="{{ url('acme_store_showProduct' , {'id': product.id }) }}" > {{ product.name }} </a></td>
                        <td><a href="{{ url('acme_store_showCategory' , {'id': product.category.id }) }}" >{{ product.category.name }}</a></td>
                        <td>{{ product.price }}</td>
                        <td>{{ product.description|slice(0,10) }}...</td>
                        <td><a href="{{ url('acme_store_deleteProduct' , {'id': product.id }) }}" >Delete</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
